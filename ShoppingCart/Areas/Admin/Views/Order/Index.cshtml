@*Partial views ham 2sre views ke ander use kar sakte hai bas itna sa diff hota hai view or partial views me*@
@model IEnumerable<OrderDetail>
@{
    ViewData["Title"] = "Index";
}
<div class="container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Orders</h2>
        </div>
        <div class="col-6">
            <a asp-controller="order" asp-action="Index" asp-route-status="pending">
                Pending @*yahan par hi hamare orders ke status change honge bas yahin se hamein apne orders ke status ka pata chalega*@
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="approved">
                Approved
            </a> @*kai baar ye hota hai ki hamara order to compleat ho jata hai but hamari pay,ent fail ho jati hai to payment ka hamein hamara order status hi bataega*@
            <a asp-controller="order" asp-action="Index" asp-route-status="underprocess">
                Under Process
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="shipped">
                Shipped
            </a>
            <a asp-controller="order" asp-action="Index" asp-route-status="all">
                All
            </a>
        </div>
    </div>
</div>
<table id="myTable" class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Order Status
            </th>
            <th>
                Order Total
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
    
</table>

@section scripts
{
    <script src="~/js/Order.js"></script>
}
